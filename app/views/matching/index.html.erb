<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
  <div class="mx-auto max-w-2xl py-8 lg:max-w-none">
    <h2 class="text-2xl font-bold text-gray-900">Unmatched Applicants</h2>
    <p class="mt-4 text-gray-600"><%= @unmatched_applicants.count %> applicants have not been matched with a mentor yet.</p>

    <% if @unmatched_applicants.any? %>
      <div class="mt-6 lg:grid lg:grid-cols-2 lg:gap-6">
        <% @unmatched_applicants.each do |applicant| %>
          <div class="group relative bg-white p-6 rounded-lg border shadow-sm bg-red-100">
            <div class="flex justify-between items-start">
              <div class="flex-1">
                <h3 class="text-lg font-semibold text-gray-900">
                  <%= applicant.applicant_questionnaire.name %>
                </h3>
                <p class="text-sm text-gray-500 mt-1">
                  <% if applicant.city.present? %>
                    <%= applicant.city %>, <%= applicant.country_code %>
                  <% else %>
                    Location not specified
                  <% end %>
                </p>

                <div class="mt-4">
                  <p class="text-sm text-gray-700">
                    <strong>Goals:</strong> <%= truncate(applicant.applicant_questionnaire.mentorship_goals, length: 100) %>
                  </p>

                  <div class="mt-2">
                    <strong class="text-sm text-gray-700">Looking for:</strong>
                    <div class="flex gap-2 mt-1">
                      <% if applicant.applicant_questionnaire.looking_for_career_mentorship %>
                        <span class="inline-flex items-center rounded-md bg-blue-50 px-2 py-1 text-xs font-medium text-blue-700 ring-1 ring-inset ring-blue-700/10">Career</span>
                      <% end %>
                      <% if applicant.applicant_questionnaire.looking_for_code_mentorship %>
                        <span class="inline-flex items-center rounded-md bg-green-50 px-2 py-1 text-xs font-medium text-green-700 ring-1 ring-inset ring-green-700/10">Code</span>
                      <% end %>
                    </div>
                  </div>

                  <% if applicant.languages.any? %>
                    <div class="mt-2">
                      <strong class="text-sm text-gray-700">Languages:</strong>
                      <div class="flex flex-wrap gap-1 mt-1">
                        <% applicant.languages.each do |language| %>
                          <span class="inline-flex items-center rounded-md bg-gray-50 px-2 py-1 text-xs font-medium text-gray-600 ring-1 ring-inset ring-gray-500/10">
                            <%= language.english_name %>
                          </span>
                        <% end %>
                      </div>
                    </div>
                  <% end %>
                </div>
              </div>

              <div class="ml-4">
                <%= link_to "Find Matches", matching_path(applicant),
                    class: "inline-flex items-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
              </div>
            </div>
          </div>
        <% end %>
      </div>
    <% else %>
      <div class="text-center py-12">
        <div class="text-gray-400">
          <%= icon "check-circle", class: "mx-auto h-12 w-12" %>
        </div>
        <p class="mt-1 text-sm text-gray-500">All applicants have been matched with mentors!</p>
      </div>
    <% end %>
  </div>
</div>
